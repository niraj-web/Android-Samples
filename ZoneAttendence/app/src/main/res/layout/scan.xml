<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/folder"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="150dp"
        android:background="@drawable/ic_baseline_folder_open_24"/>

    <TextView
        android:id="@+id/tvscanAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/folder"
        android:layout_marginTop="20dp"
        android:text="Allow RootID Zone to access photos, media, and files on your device?"
        android:textSize="20sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/tvscanAlert"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tvScanAllow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvscanAlert"
        android:layout_marginTop="50dp"
        android:text="ALLOW"
        android:gravity="center"
        android:textSize="15sp"
        android:textColor="@color/teal_200"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/black"
        android:layout_below="@id/tvScanAllow"
        android:layout_marginTop="20dp"/>


    <TextView
        android:id="@+id/tvScanDeny"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvScanAllow"
        android:layout_marginTop="50dp"
        android:text="DENY"
        android:textColor="@color/teal_200"
        android:gravity="center"
        android:textSize="15sp"/>



</RelativeLayout>