<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tvResetAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Are you sure you want to reset all the barcodes and attendence from device? (Please sync data before deletion)"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>
    <TextView
        android:id="@+id/tvResetCancel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResetAlert"
        android:text="CANCEL"
        android:textSize="15sp"
        android:textColor="@color/violet"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:id="@+id/tvResetReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvResetAlert"
        android:text="RESET"
        android:textColor="@color/violet"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="270dp"/>

</RelativeLayout>