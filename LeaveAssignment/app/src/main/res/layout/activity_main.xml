<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/gray"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/tvName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="300dp"
        android:layout_marginTop="10dp"
        android:text="NAME"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/tvEmpname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/black"
        android:textColorHint="@color/white"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:hint="Enter Name"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvLeavetype"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvName"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="280dp"
        android:layout_marginTop="20dp"
        android:text="LEAVE TYPE*"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvLeavetypeSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvEmpname"
        android:background="@color/black"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:hint="--Leave Type--"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:gravity="center"
        android:drawableEnd="@drawable/ic_baseline_arrow_drop_down_24"
        android:textSize="15dp" />

    <TextView
        android:id="@+id/tvFrom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvLeavetype"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="280dp"
        android:layout_marginTop="20dp"
        android:text="FROM*"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/tvFromSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvLeavetypeSelect"
        android:background="@color/black"
        android:layout_marginLeft="140dp"
        android:textColor="@color/white"
        android:layout_marginRight="10dp"
        android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
        android:gravity="center"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvFrom"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="280dp"
        android:layout_marginTop="20dp"
        android:text="TO*"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/tvToSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvFromSelect"
        android:background="@color/black"
        android:textColor="@color/white"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:drawableEnd="@drawable/ic_baseline_calendar_today_24"
        android:gravity="center"
        android:textSize="15dp"/>

    <TextView
        android:id="@+id/tvReason"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTo"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="280dp"
        android:layout_marginTop="20dp"
        android:text="REASON*"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/tvReasonSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvToSelect"
        android:background="@color/black"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/tvEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvReason"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="280dp"
        android:layout_marginTop="20dp"
        android:text="EMAIL TO*"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvReasonSelect">
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tvEmailTo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/tvReasonSelect"
        android:background="@color/black"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:padding="60dp"
        android:gravity="center"
        android:textSize="15sp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tvCC"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll1"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="280dp"
        android:layout_marginTop="20dp"
        android:text="MAKE MORE PEAPLE AS CC"
        android:textColor="@color/white"
        android:textSize="15dp"/>

    <EditText
        android:id="@+id/tvCCSelect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/ll1"
        android:background="@color/black"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="10dp"
        android:textColor="@color/white"
        android:gravity="center"
        android:textSize="15dp"/>





</RelativeLayout>