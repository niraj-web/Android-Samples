<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FirstA">

    <TextView
        android:id="@+id/wlcm"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Welcome..."
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:textColor="@color/green" />

    <TextView
        android:id="@+id/barcodeId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/wlcm"
        android:layout_marginTop="20dp"
        android:text="IMPRERRUBBS4 (1)"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/green"/>

    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/barcodeId"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1"
        android:layout_marginTop="20dp"
        android:text="Customer Name :"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/cusNamw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view1"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="170dp"
        android:text="Niraj Mahendra Saraswat"
        android:textSize="17sp"/>

    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/cusNamw"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cusM"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:layout_marginTop="20dp"
        android:text="Customer Mobile :"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/cusMobile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view2"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="170dp"
        android:text="9403723945"
        android:textSize="17sp"/>

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/cusMobile"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/cusE"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:layout_marginTop="20dp"
        android:text="Customer Mobile :"
        android:textSize="17sp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/cusEmail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view3"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="170dp"
        android:text="saraswatniraj99@gmail.com"
        android:textSize="17sp"/>


    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/black"
        android:layout_below="@id/cusEmail"
        android:layout_marginTop="20dp"/>



    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view4"
        android:layout_marginTop="90dp"
        android:backgroundTint="@color/green"
        android:layout_marginLeft="140dp"
        android:layout_marginRight="140dp"
        android:text="new scan"/>





</RelativeLayout>